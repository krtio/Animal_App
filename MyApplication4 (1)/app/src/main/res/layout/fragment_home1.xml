<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/backarrow"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="Back"
        android:layout_margin="0dp" />

    <!-- Image Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나에게 맞는 반려동물 찾기"
            android:fontFamily="@font/notoextrabold"
            android:textColor="#ed6a28"
            android:gravity="center"
            android:textSize="30dp" />


    </LinearLayout>

    <!-- Question Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="질문"
            android:fontFamily="@font/notomedium"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="5dp" />

        <TextView
            android:id="@+id/question_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:textSize="18sp"
            android:fontFamily="@font/notoregular"
            android:text="1/5"
            android:textColor="@color/black"
            android:gravity="right"
            android:layout_marginEnd="5dp" />
    </LinearLayout>

    <!-- Radio Button Section -->
    <RadioGroup
        android:id="@+id/initial_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:background="@drawable/radio_border"
        android:elevation="6dp"
        android:padding="8dp">

        <RadioButton
            android:id="@+id/radio_option_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="옵션 1" />

        <RadioButton
            android:id="@+id/radio_option_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="옵션 2" />

        <RadioButton
            android:id="@+id/radio_option_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="옵션 3" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.widget.Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_style"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#484848"
            android:fontFamily="@font/notoregular"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="12dp"
            android:text="답변을 누르고 다음 버튼을 눌러주세요."/>

    </LinearLayout>

</LinearLayout>


